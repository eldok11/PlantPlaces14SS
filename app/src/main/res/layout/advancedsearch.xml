<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff ">

    <TextView
        android:id="@+id/lblPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="18dp"
        android:text="Plantname" />

    <AutoCompleteTextView
        android:id="@+id/actPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblPlantName"
        android:layout_alignStart="@+id/lblPlantName"
        android:layout_below="@+id/lblPlantName"
        android:layout_marginTop="15dp"
        android:text="@string/blank" />

    <Button
        android:id="@+id/btnSearchPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/actPlantName"
        android:layout_alignStart="@+id/actPlantName"
        android:layout_below="@+id/actPlantName"
        android:layout_marginTop="16dp"
        android:onClick="searchForPlants"
        android:text="@string/Search" />
</RelativeLayout>